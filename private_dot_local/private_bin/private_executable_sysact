#!/usr/bin/env bash

# A dmenu wrapper script for system functions.

MENU="$(rofi -sep "|" -dmenu -i -p \
    'System' -location 3 -xoffset -10 -yoffset 40 \
    -width 10 -hide-scrollbar -line-padding 4 -padding 20 \
    -lines 4 <<< "ðŸ”’ Lock|ðŸ» Hibernate|ðŸšª Logout|ðŸ”ƒ Reboot|ðŸ–¥  Shutdown")"
        case "$MENU" in
            *"ðŸ”’ Lock") betterlockscreen -l dimblur ;;
            *"ðŸ» Sleep") betterlockscreen -s dimblur ;;
            *"ðŸšª Logout") bspc quit ;;
            *"ðŸ”ƒ Reboot") systemctl reboot ;;
            *"ðŸ–¥ Shutdown") systemctl -i poweroff ;;
        esac
