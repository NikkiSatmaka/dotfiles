{{- if eq .chezmoi.os "linux" -}}

[".config/fontconfig/conf.d/10-nerd-font-symbols.conf"]
    type = "file"
    url = "https://raw.githubusercontent.com/ryanoasis/nerd-fonts/refs/heads/master/10-nerd-font-symbols.conf"
    refreshPeriod = "168h"

[".local/share/fonts/Symbols"]
    type = "archive"
    url = "https://github.com/ryanoasis/nerd-fonts/releases/latest/download/NerdFontsSymbolsOnly.tar.xz"
    format = "tar.xz"
    exact = true
    private = true
    stripComponents = 0
    refreshPeriod = "168h"
    include = ["*.ttf", "*.otf"]

[".local/share/fonts/CommitMono"]
    type = "archive"
    url = "https://github.com/ryanoasis/nerd-fonts/releases/latest/download/CommitMono.tar.xz"
    format = "tar.xz"
    exact = true
    private = true
    stripComponents = 0
    refreshPeriod = "168h"
    include = ["*.ttf", "*.otf"]

[".local/share/fonts/FiraCode"]
    type = "archive"
    url = "https://github.com/ryanoasis/nerd-fonts/releases/latest/download/FiraCode.tar.xz"
    format = "tar.xz"
    exact = true
    private = true
    stripComponents = 0
    refreshPeriod = "168h"
    include = ["*.ttf", "*.otf"]

{{- end }}
