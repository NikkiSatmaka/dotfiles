#!/usr/bin/env sh

#==============================================================================
# install NVChad (https://github.com/NvChad/NvChad)
#==============================================================================

readonly NVCHAD_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/nvim"
readonly NVCHAD_GIT="https://github.com/NvChad/NvChad.git"

install_nvchad() {
  if [ -d "$2" ]; then
    echo "$2 already existed"
    echo "no changes were performed"
  else
    git clone --depth 1 "$1" "$2" || exit
  fi
}

install_nvchad "$NVCHAD_GIT" "$NVCHAD_DIR"
